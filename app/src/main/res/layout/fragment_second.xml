<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        tools:context=".SecondFragment">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:text="Popüler Haber Ajansları"
            android:textSize="23sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="15dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/haber_turk"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Haber Türk"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/follow_button"
                        style="@style/AppTheme.RoundedCornerMaterialButton"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/rounded_shape"
                        android:text="Follow"
                        android:textAllCaps="false"
                        android:textColor="@color/follow_button_text"
                        app:backgroundTint="@null"
                        app:cornerRadius="10dp" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="15dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/haber_cumhuriyet"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Cumhuriyet"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/AppTheme.RoundedCornerMaterialButton"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/rounded_shape"
                        android:text="Follow"
                        android:textAllCaps="false"
                        android:textColor="@color/follow_button_text"
                        app:backgroundTint="@null"
                        app:cornerRadius="10dp" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"

                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="15dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/haber_trt"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:scaleType="fitXY"
                        tools:src="@tools:sample/avatars" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="TRT Haber"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton

                        style="@style/AppTheme.RoundedCornerMaterialButton"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/rounded_shape"
                        android:text="Follow"
                        android:textAllCaps="false"
                        android:textColor="@color/follow_button_text"
                        app:backgroundTint="@null"
                        app:cornerRadius="10dp" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="15dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/haber_53"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:scaleType="fitXY"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Haber 53"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/AppTheme.RoundedCornerMaterialButton"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/rounded_shape"
                        android:text="Follow"
                        android:textAllCaps="false"
                        android:textColor="@color/follow_button_text"
                        app:backgroundTint="@null"
                        app:cornerRadius="10dp" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="15dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/haber_hurriyet"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        tools:src="@tools:sample/avatars" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Hürriyet"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton

                        style="@style/AppTheme.RoundedCornerMaterialButton"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/rounded_shape"
                        android:text="Follow"
                        android:textAllCaps="false"
                        android:textColor="@color/follow_button_text"
                        app:backgroundTint="@null"
                        app:cornerRadius="10dp" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="15dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/haber_ntv"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:scaleType="fitXY"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="NTV Haber"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton

                        style="@style/AppTheme.RoundedCornerMaterialButton"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/rounded_shape"
                        android:text="Follow"
                        android:textAllCaps="false"
                        android:textColor="@color/follow_button_text"
                        app:backgroundTint="@null"
                        app:cornerRadius="10dp" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>
</layout>